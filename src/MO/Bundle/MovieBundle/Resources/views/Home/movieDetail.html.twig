{% extends "MOMovieBundle:Home:movieList.html.twig" %}

{% block title %}Movie Marathon - {{ movie.name }}{% endblock %}

{% block breadcumb %}
    {{parent()}}
    {% if movie %}
        <li>{{movie.name}}</li>
    {% else %}
        <li>D&eacute;tails</li>
    {% endif %}

{% endblock %}

{% block movie_list_class %}active{% endblock %}


{% block body %}
    {% if movie %}
        <h1>{{movie.name}}</h1>
        <div class="row">
            {% for performance in movie.performances %}
                <div class="col-xs-12">

                    <div class="col-xs-3">
                        {{performance.cinema.name}} {{performance.kind}}
                    </div>

                    <div class="col-xs-3">
                        {{performance.hall.name}}
                    </div>

                    <div class="col-xs-3">
                        {{performance.startDate|localizeddate('full', 'none', app.request.locale, none, "HH'h'mm - eeee d MMMM Y")}}
                    </div>

                    <div class="col-xs-3">
                        {{performance.endDate|localizeddate('full', 'none', app.request.locale, none, "HH'h'mm - eeee d MMMM Y")}}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-danger">
            Aucun film sélectionné
        </div>
    {% endif %}
{% endblock %}
